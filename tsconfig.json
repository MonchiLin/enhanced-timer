{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
