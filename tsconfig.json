{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
